<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        <View
            android:id="@+id/dialog_horizontal_bar"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#dddddd"/>

        <EditText
            android:id="@+id/dialog_edit_subject_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/dialog_horizontal_bar"
            android:layout_toLeftOf="@+id/dialog_edit_subject_card_grade"
            android:layout_toStartOf="@+id/dialog_edit_subject_card_grade"
            android:hint="@string/edit_subject_hint"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:scrollHorizontally="true" />

        <EditText
            android:id="@+id/dialog_edit_subject_card_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/dialog_horizontal_bar"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:hint="###"
            android:imeOptions="actionDone"
            android:inputType="number|none"
            android:minEms="2"
            android:maxEms="3"
            android:maxLength="3"/>

        <TextView
            android:id="@+id/dialog_edit_subject_card_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/dialog_edit_subject_card_grade"
            android:layout_alignLeft="@+id/dialog_edit_subject_card_name"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="16dp"
            android:text="@string/edit_subject_name_text"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/dialog_edit_subject_card_grade_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/dialog_edit_subject_card_grade"
            android:layout_alignLeft="@+id/dialog_edit_subject_card_grade"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="16dp"
            android:text="@string/edit_subject_grade_text"
            android:layout_gravity="right" />

    </RelativeLayout>




</LinearLayout>